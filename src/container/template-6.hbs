<header class="header">
  {{!-- <div class="">
    {{> logo}}   
  </div> --}}
  <a href="#test">
    {{> logo}}   
  </a>

  <nav class="header_nav">
    <div class="header_nav_right">
      {{> nav list=header}}
    </div>
  </nav>
</header>

<main class="main">
  {{#with info}}
      <div class="messages">
        <h1 class="messages_title">{{title}}</h1>
        <p class="advantages">{{description}}</p>
      </div>
  {{/with}}

  
  {{#with form}}
    <div class="form">
      <h2 class="form_title">{{title}}</h2>
      
      <div class="form_input_list">
        {{#each inputs}}
          <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}" />
        {{/each}}
      </div>

      <div class="form_checkbox">
        <input type="checkbox" name="checkbox.name" id="checkbox.name"/>
        <div></div>
        <label for="checkbox.name" >{{checkbox.label}}</label>
      </div>

      <button type="submit" class="form_button">{{button}}</button>
      <p class="form_info">{{info}}</p>
    </div>
  {{/with}}
</main>

  {{#with updates}}
    <div class="updates">
      <h2 class="upd_title">{{title}}</h2>
       {{#each list}}
          <div class="msg1">
            <strong class="msg_name1">{{nickname}}</strong>
            <p class="msg_text1">{{description}}</p>
            {{!-- <span class="msg_day">{{day}}</span> --}}
          </div>
        {{/each}}
        
        <a href="{{show_all.url}}" class="messages_link">{{show_all.text}}</a>
      
    </div>
  {{/with}}

  <div class="exp-feedback">
    {{#with expirience}}
      <div class="main2">
        <h3 class="exp_title">{{title}}</h3>
        <span class="msg_day">{{badge}}</span>
      </div>
      
      <div class="main1">
        {{#each list}}
          <div class="msg">
            <strong class="msg_name">{{name}}</strong>
            <p class="msg_text">{{details}}</p>
          </div>
        {{/each}}
      </div>
           
    {{/with}}
  </div>

<div class="advantages">
  {{#each advantages}}
    <div>
      <strong>{{title}}</strong>
      <p>{{text}}</p>
    </div>
  {{/each}}
</div>

<futer class="footer" id="test">
  <div>
    {{> logo}}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>

  {{#each footer}}
    {{!-- <div class="col-3"> --}}
    <div>
      <span class="footer_title">{{title}}</span>
      {{> nav list=links isVertical=true}}
    </div>
  {{/each}}
</futer>  
